<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="image_circle_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>


    <style name="dashboard_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btnPickUp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#5C9628</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="btnCatering">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#5C9628</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">10sp</item>
    </style>

    <style name="btnCurbside">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#5C9628</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">10sp</item>
    </style>

    <style name="edit_search_style">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawableRight">@drawable/ic_options</item>
        <item name="android:elevation">1dp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">none</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="edit_search_style2">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:elevation">1dp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:gravity">left</item>
        <item name="android:inputType">none</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="btnDelivery">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#FBBC04</item>
        <item name="android:drawableLeft">@drawable/ic_delivery</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="text_open_close_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:drawableLeft">@drawable/ic_green</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#82C446</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_review_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:drawableLeft">@drawable/ic_star</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="recycler_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginEnd">13dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_min_max_style">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:drawableLeft">@drawable/ic_grey_dot</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="grocery_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="image_rv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_type_food_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="text_review_amount_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_country_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_food_kind">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:drawableLeft">@drawable/ic_grey_dot</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_delivery_cost">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_more_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#FFC545</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tabLayout_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tabLayout_text_style"
        parent="tabLayout_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tabLayout_text_grocery"
        parent="tabLayout_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_km_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableLeft">@drawable/ic_arrow</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="btn_time_del_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#FFC545</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>